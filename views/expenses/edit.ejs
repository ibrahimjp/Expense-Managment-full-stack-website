<%layout("layouts/boilerplate.ejs")%>
<body>
  <h3 class="mt-3">Edit Expense</h3>
  <form action="/expenses/<%= editExpense._id %>?_method=PUT" method="POST">
    <div class="mb-3 mt-4">
      <label for="name" class="form-label mt-4">Your Name</label>
      <input
        type="text"
        id="name"
        name="expenses[name]"
        class="form-control"
        value="<%= editExpense.name %>"
      />
      <br />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        id="description"
        rows="3"
        cols="8"
        class="form-control"
        name="expenses[description]"
      ><%= editExpense.description %></textarea>
    </div>
    <br />
    <div class="mb-3">
      <label for="phoneNumber" class="form-label">Phone Number</label>
      <input
        type="number"
        id="phoneNumber"
        name="expenses[phoneNumber]"
        class="form-control"
        value="<%= editExpense.phoneNumber %>"
      />
      <br />
    </div>
    <div class="mb-3">
      <label for="expenses" class="form-label">Amount</label>
      <input
        type="number"
        id="expenses"
        name="expenses[expenses]"
        class="form-control"
        value="<%= editExpense.expenses %>"
      />
      <br />
    </div>
    <div class="mb-3">
      <label for="to" class="form-label">To Whom</label>
      <input
        type="text"
        placeholder="Enter Other Person Name"
        name="expenses[to]"
        class="form-control"
        id="to"
        value="<%= editExpense.to %>"
      />
      <br />
    </div>
    <div class="row mb-4">
      <div class="col-6">
        <button type="submit" class="btn btn-success">Update Expense</button>
      </div>
      <div class="col-6 text-right">
        <a href="/expenses/<%= editExpense._id %>" class="btn btn-danger">Cancel</a>
      </div>
    </div>
  </form>
</body>